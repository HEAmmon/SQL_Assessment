--top 5 schools are: ucsd, cps, ku, vt, & oregonstate
SELECT email_domain, COUNT(email_domain)
FROM users
GROUP BY email_domain
ORDER BY COUNT(email_domain) DESC
LIMIT 25; 

--23 .edu learners are located in New York
